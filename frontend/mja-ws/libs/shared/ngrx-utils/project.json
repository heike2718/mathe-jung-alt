{
  "name": "shared-ngrx-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/ngrx-utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/ngrx-utils",
        "main": "libs/shared/ngrx-utils/src/index.ts",
        "tsConfig": "libs/shared/ngrx-utils/tsconfig.lib.json",
        "assets": ["libs/shared/ngrx-utils/*.md"],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/shared/ngrx-utils/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/shared/ngrx-utils"],
      "options": {
        "jestConfig": "libs/shared/ngrx-utils/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["domain:shared", "type:shared:ngrx-utils"]
}
