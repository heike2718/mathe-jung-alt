{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nrwl/nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "domain:shared:messaging:ui",
                  "type:model",
                  "type:ui",
                  "type:api",
                  "type:feature",
                  "type:shared:config",
                  "type:shared:http",
                  "type:shared:auth:api"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:api",
                  "type:ui",
                  "type:model"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:shared:messaging:api",
                  "type:model",
                  "type:api",
                  "type:shared:util"
                ],"bannedExternalImports": [
                  "@ngrx/**"
                ]
              },
              {
                "sourceTag": "type:api",
                "onlyDependOnLibWithTags": [
                  "type:model"
                ]
              },
              {
                "sourceTag": "domain:deskriptoren",
                "onlyDependOnLibsWithTags": [
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:shared:messaging:ui",
                "onlyDependOnLibsWithTags": [
                  "type:shared:messaging:api",
                  "type:shared:util"
                ]
              },
              {
                "sourceTag": "type:shared:http",
                "onlyDependOnLibWithTags": [
                  "type:shared:config",
                  "type:shared:messaging:api"
                ]
              },
              { 
                "sourceTag": "type:shared:auth:api",
                "onlyDependOnLibWithTags": [
                  "domain:shared:auth:model",
                  "type:shared:auth:data"            
                ]               
              },
              {
                "sourceTag": "type:shared:auth:data",
                "onlyDependOnLibsWithTags": [
                  "domain:shared:auth:model",
                  "type:shared:messaging:api",
                  "type:shared:config",
                  "type:shared:ngrx-utils",
                  "type:shared:util"
                ]
              },
              {
                "sourceTag": "type:shared:ngrx-utils",
                "onlyDependOnLibsWithTags": [
                  "type:shared:util"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/javascript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}