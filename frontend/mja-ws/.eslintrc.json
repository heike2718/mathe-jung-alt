{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "domain:auth:api",
                  "type:model",
                  "type:api",
                  "type:feature",
                  "type:shared:config",
                  "type:shared:http"
                ]
              },
              {
                "sourceTag": "domain:deskriptoren",
                "onlyDependOnLibsWithTags": [
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:core",
                "onlyDependsOnLibsWithTags": "domain:shared"
              },
              {
                "sourceTag": "type:api",
                "onlyDependOnLibWithTags": [
                  "type:feature",
                  "type:data",
                  "type:ui",
                  "type:model"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:api",
                  "type:data",
                  "type:ui",
                  "type:model",
                  "type:shared:config",
                  "type:shared:ngrx-utils",
                  "type:shared:auth",
                  "type:shared:ui-messaging",
                  "type:shared:util"
                ]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": [
                  "type:model",
                  "type:shared:config",
                  "type:shared:ngrx-utils",
                  "type:shared:util",
                  "type:shared:messaging"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:model",
                  "type:shared:form",
                  "type:shared:ui",
                  "type:shared:util"
                ]
              },
              {
                "sourceTag": "type:ui",
                "bannedExternalImports": ["@ngrx/**"]
              },
              {
                "sourceTag": "type:shared:ngrx-utils",
                "onlyDependOnLibsWithTags": ["type:shared:util"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
