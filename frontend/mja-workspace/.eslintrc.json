{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:shared:util-configuration",
                  "type:shared:util-mja",
                  "type:shared:ui-components",
                  "type:shared:auth",
                  "type:shared:suchfilter",
                  "type:data"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:data",
                  "type:ui",
                  "type:model",
                  "type:shared:util-configuration",
                  "type:shared:util-mja",
                  "type:shared:ui-components",
                  "type:shared:auth",
                  "type:data"
                ]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": [
                  "type:model",
                  "type:shared:util-configuration",
                  "type:shared:util-mja"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:data",
                  "type:shared:form",
                  "type:shared:util-mja",
                  "type:shared:ui-components",
                  "type:shared:auth"
                ]
              },
              {
                "sourceTag": "domain:deskriptoren",
                "onlyDependOnLibsWithTags": [
                  "domain:deskriptoren",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:suchfilter",
                "onlyDependOnLibsWithTags": [
                  "domain:suchfilter",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:shared:util-configuration",
                  "type:shared:ui-components",
                  "type:shared:util-mja",
                  "domain:shared",
                  "domain:data"
                ]
              },
              {
                "sourceTag": "domain:raetsel",
                "onlyDependOnLibsWithTags": ["domain:raetsel", "domain:shared"]
              },
              {
                "sourceTag": "domain:quellen",
                "onlyDependOnLibsWithTags": ["domain:quellen", "domain:shared"]
              },
              {
                "sourceTag": "domain:grafik",
                "onlyDependOnLibsWithTags": ["domain:grafik", "domain:shared"]
              },
              {
                "sourceTag": "domain:raetselgruppen",
                "onlyDependOnLibsWithTags": [
                  "domain:raetselgruppen",
                  "domain:shared"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
